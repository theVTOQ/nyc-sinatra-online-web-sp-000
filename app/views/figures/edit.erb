<h1>Edit Figure:</h1>
<form action="/figures/<%= @figure.id %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="patch">

  <label for="figure_name">Figure Name:</label>
  <input type="text" id="figure_name" name="figure[name]" placeholder="<%= @figure.name %>">

  <h2>Select Titles:</h2>
  <% @titles.each do |title| %>
    <label for="title_<% title.id %>"><%= title.name %></label>
    <input type="checkbox" id="title_<% title.id %>" name="figure[title_ids][]"
      <%= 'checked' if @figure.titles.include?(title) %> value="<% title.id %>"><br>
  <% end %>

  <h2>Create a new Title:</h2>
  <label for="title_name">Title Name:</label>
  <input type="text" id="title_name" name="title[name]">

  <h2>Select Landmarks:</h2>
  <% @landmarks.each do |landmark| %>
    <label for="landmark_<% landmark.id %>"><%= landmark.name %></label>
    <input type="checkbox" id="landmark_<% landmark.id %>" name="figure[landmark_ids][]"
      <%= 'checked' if @figure.landmarks.include?(landmark) %> value="<% landmark.id %>">
  <% end %>

  <h2>Create a new Landmark:</h2>
  <label for="new_landmark">Landmark Name:</label>
  <input type="text" id="new_landmark" name="landmark[name]">

  <input type="submit" value="Edit Figure">
</form>
